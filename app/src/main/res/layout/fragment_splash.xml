<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_green"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".presentation.splash.SplashFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        tools:ignore="UselessParent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvSplash"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fermer"
                android:textColor="@color/blue_green"
                android:textSize="78sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvSplashc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/s"
                android:textColor="@color/dark_white"
                android:textSize="78sp"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvSplash3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/first_kyrgyzstan"
            android:textColor="@color/dark_white"
            android:textSize="19.50sp"
            android:textStyle="bold" />

        <View
            android:layout_width="234dp"
            android:layout_height="2.60dp"
            android:layout_marginTop="26dp"
            android:background="@color/blue_green" />

        <TextView
            android:id="@+id/tvSplash4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="26dp"
            android:letterSpacing="0.1"
            android:text="@string/accelerate_prosperity_company"
            android:textColor="@color/dark_white"
            android:textSize="14sp"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>